<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f8"
    tools:context=".ui.my.CarryDetailActivity">

    <include layout="@layout/layout_title_black_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="13dp"
        >

        <!--金额-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_10"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_tab_60"
                android:textSize="@dimen/text_size15"
                android:textColor="@color/color_15"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_carry_detail_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textStyle="bold"
                android:textColor="@color/color_15"
                android:textSize="@dimen/text_size15"
                android:drawableLeft="@mipmap/icon_carry"
                android:drawablePadding="@dimen/dp_10"/>


        </LinearLayout>

    <View
        style="@style/line_3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/my_tab_61"
                android:textSize="@dimen/text_size15"
                android:textColor="@color/color_15"
                />

            <!--提币时间-->
            <TextView
                android:id="@+id/tv_carry_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_15"
                android:textSize="@dimen/text_size15"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/my_tab_56"
                android:textSize="@dimen/text_size15"
                android:textColor="@color/color_15"
                />

            <!--金额-->
            <TextView
                android:id="@+id/tv_carry_detail_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_carry"
                android:textColor="@color/color_15"
                android:textSize="@dimen/text_size15"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/my_tab_62"
                android:textSize="@dimen/text_size15"
                android:textColor="@color/color_15"
                />

            <!--提现方式-->
            <TextView
                android:id="@+id/tv_carry_detail_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_15"
                android:textSize="@dimen/text_size15"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/my_tab_63"
                android:textSize="@dimen/text_size15"
                android:textColor="@color/color_15"
                />

            <!--地址-->
            <TextView
                android:id="@+id/tv_carry_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/color_15"
                android:textSize="@dimen/text_size15"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/my_tab_38"
                android:textSize="@dimen/text_size15"
                android:textColor="@color/color_15"
                />

            <!--状态-->
            <TextView
                android:id="@+id/tv_carry_detail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/color_15"
                android:textSize="@dimen/text_size15"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>