<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.my.ModifyMobileActivity">

    <include layout="@layout/layout_title_black_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height45"
            android:text="@string/my_tab_25"
            android:gravity="center_vertical"
            android:textColor="@color/color_7"
            android:textSize="@dimen/text_size15"
            />

            <View
                style="@style/line_4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height45"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size15"
                android:text="@string/my_tab_26"
                android:textColor="@color/color_15"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size15"
                android:text="@string/my_tab_27"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@drawable/ic_expand_more_black_24dp"
                android:textColor="@color/color_15"/>

        </LinearLayout>

        <View
            style="@style/line_4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height45"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size15"
                android:text="@string/my_tab_28"
                android:layout_marginRight="15dp"
                android:textColor="@color/color_15"/>

            <!--手机号码输入框-->
            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textColor="@color/color_15"
                android:textColorHint="@color/color_7"
                android:textSize="@dimen/text_size15"
                android:hint="@string/my_tab_29"
                android:inputType="phone"
                android:maxLength="11"/>




        </LinearLayout>
        <View
            style="@style/line_4"/>

        <!--下一步-->
        <TextView
            android:id="@+id/tv_modify_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/item_height50"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/text_size15"
            android:background="@drawable/shape_login_bg"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:text="@string/my_tab_30"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>