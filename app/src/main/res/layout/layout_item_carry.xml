<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height45"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_item_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2019/07/24 13:12"
            android:textColor="@color/color_15"
            android:textSize="@dimen/text_size13"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:gravity="center">

           <TextView
               android:id="@+id/tv_item_money"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:gravity="center"
               android:text="-100"
               android:drawablePadding="@dimen/dp_10"
               android:drawableLeft="@mipmap/icon_carry"
               android:textColor="@color/color_15"
               android:textSize="@dimen/text_size13"/>

       </LinearLayout>
        <TextView
            android:id="@+id/tv_item_remark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/my_tab_58"
            android:layout_marginRight="-12dp"
            android:textColor="@color/color_15"
            android:textSize="@dimen/text_size13"/>

    </LinearLayout>

    <View
       style="@style/line_3"/>

</LinearLayout>